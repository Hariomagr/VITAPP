<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp"
        android:id="@+id/card460"
        android:layout_marginBottom="3dp"
        android:paddingTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ass_title"
                    android:layout_width="358dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Additional Learning"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ass_duee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Due Date:"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/ass_due"
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="06-Apr-2018"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/ass_maxx"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:text="Max Marks:"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/ass_max"
                        android:layout_width="31dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ass_statuss"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Status:"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/ass_status"
                        android:layout_width="268dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Not Yet Uploaded dfg dgg dfgg dfgdg"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/ass_weightagee"
                        android:layout_width="95dp"
                        android:layout_marginLeft="47dp"
                        android:layout_height="wrap_content"
                        android:text="Weightage:"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/ass_weightage"
                        android:layout_width="31dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>