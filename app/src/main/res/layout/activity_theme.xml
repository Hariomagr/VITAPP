<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Theme">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_facultyy"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:elevation="4dp" />
    </android.support.design.widget.AppBarLayout>

<ScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:fillViewport="true"
    android:layout_below="@+id/tool"
android:scrollbars="none">
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/blue"
                android:id="@+id/app"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/red"
                android:id="@+id/red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/purple"
                android:id="@+id/purple"/>

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/deeporange"
                android:id="@+id/deeporange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/yellow"
                android:id="@+id/yellow"/>

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/green"
                android:id="@+id/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/teal"
                android:id="@+id/teal"/>

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/pink"
                android:id="@+id/pink"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/deeppurple"
                android:id="@+id/deeppurple"/>

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/orange"
                android:id="@+id/orange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/grey"
                android:id="@+id/grey"/>

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:src="@drawable/bluegrey"
                android:id="@+id/bluegrey"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</ScrollView>

</RelativeLayout>