<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularbarr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cpb_background_progressbar_color="?attr/colorPrimary"
                app:cpb_background_progressbar_width="2dp"
                app:cpb_progress="-75"
                app:cpb_progressbar_color="?attr/colorAccent"
                app:cpb_progressbar_width="3dp" />

            <TextView
                android:id="@+id/sub_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="03:00AM"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/sub_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="to"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/sub_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:layout_centerHorizontal="true"
                android:text="05:00AM"
                android:textSize="10dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_name"
                android:layout_width="256dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="Application of Linear Algebra and "
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sub_venue"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="SJT-155"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/sub_type"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"

                    android:text="Theory"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/sub_code"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:text="ITE1007"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cpb_background_progressbar_color="?attr/colorPrimary"
                app:cpb_background_progressbar_width="2dp"
                app:cpb_progress="50"
                app:cpb_progressbar_color="#ff2112"
                app:cpb_progressbar_width="4dp" />

            <TextView
                android:id="@+id/sub_att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="100%"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>